{
	"$schema": "https://raw.githubusercontent.com/nicollasricas/tauri-settings-schema/refs/heads/master/schemas/v2/tauri.conf.json",
	"productName": "Cafelua Shell",
	"version": "0.1.0",
	"identifier": "com.cafelua.shell",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:1420",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"withGlobalTauri": false,
		"windows": [
			{
				"title": "Cafelua Shell",
				"width": 380,
				"height": 900,
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"transparent": false,
				"visible": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "rpm", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.ico",
			"icons/icon.png"
		],
		"category": "Utility",
		"shortDescription": "AI Avatar Desktop â€” Chat with Alpha",
		"longDescription": "Cafelua Shell is a desktop AI companion powered by LLM providers. Features an interactive VRM avatar (Alpha), tool execution, and always-on daemon.",
		"linux": {
			"deb": {
				"depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
				"desktopTemplate": null
			},
			"appimage": {
				"bundleMediaFramework": false
			}
		}
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["cafelua"]
			}
		}
	}
}
